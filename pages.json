{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		//配置路由信息
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "zzy新闻"
			}
		}
	    ,{
            "path" : "pages/user/user",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人中心",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "详情页",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	//配置全局的样式
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "zzy新闻",
		"navigationBarBackgroundColor": "#31C27C",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	//配置下面的导航栏
	"tabBar": {
		"color": "#666",
		"selectedColor": "#31C27C",
		"list": [
			{
				"text": "首页", //标题
				"pagePath": "pages/index/index", //路由的路径
				"iconPath": "static/images/index.png",  //不激活的图标
				"selectedIconPath": "static/images/index-h.png"  //选中时的图标
			},
			{
				"text":"个人中心",
				"pagePath": "pages/user/user",
				"iconPath": "static/images/user.png",
				"selectedIconPath": "static/images/user-h.png"
			}
		]
	}
}
